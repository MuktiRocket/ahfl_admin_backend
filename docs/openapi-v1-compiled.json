{
  "openapi": "3.0.0",
  "info": {
    "title": "Aadhar Housing Finance Limited API",
    "description": "How to talk with AHFL Api",
    "version": "1.0.0",
    "contact": {
      "name": "Jaydeep Sarkar",
      "email": "jaydeep.sarkar@intglobal.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8125/api/v1",
      "description": "Local PC development server"
    }
  ],
  "tags": [
    {
      "name": "General",
      "description": "General endpoint to check the health status of the system"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "tags": [
          "General"
        ],
        "summary": "Returns the system health status and server time",
        "responses": {
          "200": {
            "description": "Returns the system health status and server time",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthInfo"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/internalServerError"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Admin Auth"
        ],
        "summary": "Admin login",
        "description": "Authenticate admin user and return access & refresh tokens",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AdminLoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AdminLoginResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/badRequest"
          },
          "404": {
            "$ref": "#/components/responses/notFound"
          },
          "500": {
            "$ref": "#/components/responses/internalServerError"
          }
        }
      }
    },
    "/auth/verify-reset-code": {
      "post": {
        "tags": [
          "Admin Authentication"
        ],
        "summary": "Verify your self using an authentication code sent in email",
        "security": [
          {
            "BearerAuthorizationTokenAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "resetCode"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "minLength": 6,
                    "maxLength": 30
                  },
                  "resetCode": {
                    "type": "string",
                    "pattern": "^[0-9]+$",
                    "minLength": 6,
                    "maxLength": 6
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns a valid token on successful validation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "token"
                  ],
                  "properties": {
                    "token": {
                      "type": "string",
                      "description": "JWT token for authentication"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid credentials provided.",
            "$ref": "#/components/responses/unauthorized"
          },
          "403": {
            "description": "Forbidden - User is not authorized to access this resource.",
            "$ref": "#/components/responses/forbidden"
          },
          "500": {
            "description": "Internal Server Error - An unexpected error occurred.",
            "$ref": "#/components/responses/internalServerError"
          }
        }
      }
    },
    "/auth/forget-password": {
      "post": {
        "tags": [
          "Admin Authentication"
        ],
        "summary": "Attempt to reset the password if forget",
        "security": [
          {
            "BearerAuthorizationTokenAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Admin's email",
                    "minLength": 6,
                    "maxLength": 30
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Validates the user email and returns success as boolean",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "success",
                    "message"
                  ],
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "description": "Boolean status true or false"
                    },
                    "message": {
                      "type": "string",
                      "description": "A request status message",
                      "example": "A password reset code sent to email."
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid credentials provided.",
            "$ref": "#/components/responses/unauthorized"
          },
          "403": {
            "description": "Forbidden - User is not authorized to access this resource.",
            "$ref": "#/components/responses/forbidden"
          },
          "500": {
            "description": "Internal Server Error - An unexpected error occurred.",
            "$ref": "#/components/responses/internalServerError"
          }
        }
      }
    },
    "/auth/change-password": {
      "post": {
        "tags": [
          "Admin Authentication"
        ],
        "summary": "Change the password of the user after successfully code verification",
        "security": [
          {
            "BearerAuthorizationTokenAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "password"
                ],
                "properties": {
                  "password": {
                    "type": "string",
                    "description": "Password must include at least one lowercase letter, one uppercase letter, one number, and one special character.",
                    "maxLength": 50,
                    "example": "Str0ngP@ssw0rd"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Validates the temporary code and returns success as boolean",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "success",
                    "message"
                  ],
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "description": "Boolean status true or false"
                    },
                    "message": {
                      "type": "string",
                      "description": "A request status message",
                      "example": "Password changed successfully."
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid credentials provided.",
            "$ref": "#/components/responses/unauthorized"
          },
          "403": {
            "description": "Forbidden - User is not authorized to access this resource.",
            "$ref": "#/components/responses/forbidden"
          },
          "500": {
            "description": "Internal Server Error - An unexpected error occurred.",
            "$ref": "#/components/responses/internalServerError"
          }
        }
      }
    },
    "/admin-crm/crm-requests": {
      "get": {
        "summary": "Get list of CRM requests",
        "tags": [
          "Admin CRM Data"
        ],
        "security": [
          {
            "BearerAuthorizationTokenAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "query",
            "schema": {
              "type": "string"
            },
            "required": false,
            "description": "Global search across clientId, email, mobile, ticketId, category, type, summary, and source"
          },
          {
            "in": "query",
            "name": "from",
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2025-12-27"
            },
            "required": false,
            "description": "Filter CRM requests created on or after this date (YYYY-MM-DD)"
          },
          {
            "in": "query",
            "name": "to",
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2025-12-31"
            },
            "required": false,
            "description": "Filter CRM requests created on or before this date (YYYY-MM-DD)"
          },
          {
            "$ref": "#/components/parameters/paginationLimit"
          },
          {
            "$ref": "#/components/parameters/paginationOffset"
          }
        ],
        "responses": {
          "200": {
            "description": "CRM requests retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "totalCount": {
                      "type": "integer",
                      "example": 12
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "example": 101
                          },
                          "firstName": {
                            "type": "string",
                            "example": "Manas"
                          },
                          "lastName": {
                            "type": "string",
                            "example": "Raj"
                          },
                          "clientId": {
                            "type": "string",
                            "example": "CLIENT_123"
                          },
                          "contactEmailId": {
                            "type": "string",
                            "format": "email",
                            "example": "manas@example.com"
                          },
                          "contactMobileNo": {
                            "type": "string",
                            "example": "9876543210"
                          },
                          "probCategory": {
                            "type": "string",
                            "example": "Payment Issue"
                          },
                          "probType": {
                            "type": "string",
                            "example": "Refund"
                          },
                          "probSummary": {
                            "type": "string",
                            "example": "Refund not received"
                          },
                          "source": {
                            "type": "string",
                            "example": "MobileApp"
                          },
                          "ticketId": {
                            "type": "string",
                            "example": "TCKT-20240101"
                          },
                          "createdAt": {
                            "type": "string",
                            "format": "date-time",
                            "example": "2024-01-10T14:30:00+05:30"
                          },
                          "updatedAt": {
                            "type": "string",
                            "format": "date-time",
                            "example": "2024-01-11T10:15:00+05:30"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/internalServerError"
          }
        }
      }
    },
    "/admin-crm/download-csv": {
      "get": {
        "summary": "Get list of CRM Data (CSV Download)",
        "tags": [
          "Admin CRM Data"
        ],
        "security": [
          {
            "BearerAuthorizationTokenAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "query",
            "schema": {
              "type": "string"
            },
            "required": false,
            "description": "Search Crm Details by clientId, email, mobile, ticketId, category, type, summary, and source"
          },
          {
            "in": "query",
            "name": "from",
            "schema": {
              "type": "string",
              "format": "date"
            },
            "required": false,
            "description": "Start date for filtering payments (ISO 8601 format)"
          },
          {
            "in": "query",
            "name": "to",
            "schema": {
              "type": "string",
              "format": "date"
            },
            "required": false,
            "description": "End date for filtering payments (ISO 8601 format)"
          }
        ],
        "responses": {
          "200": {
            "description": "CRM data CSV file generated successfully",
            "content": {
              "text/csv": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/internalServerError"
          }
        }
      }
    },
    "/admin-crm/details": {
      "post": {
        "summary": "Get CRM details by ID",
        "tags": [
          "Admin CRM Data"
        ],
        "security": [
          {
            "BearerAuthorizationTokenAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "id"
                ],
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "Unique identifier of the details",
                    "example": "10"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "CRM details retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/CRMData"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Invalid or missing CRM Request Id."
          },
          "401": {
            "$ref": "#/components/responses/unauthorized"
          },
          "404": {
            "description": "CRM Data not found"
          },
          "500": {
            "$ref": "#/components/responses/internalServerError"
          }
        }
      }
    },
    "/admin-transaction/getTransactionData": {
      "get": {
        "summary": "Get list of transactions",
        "tags": [
          "Admin Transactions"
        ],
        "security": [
          {
            "BearerAuthorizationTokenAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "query",
            "schema": {
              "type": "string"
            },
            "required": false,
            "description": "Global search across customerId, mobile, orderId, txnId, loanAccountNumber, responseCode, responseMsg, responseStatus, mode, txnId and loanAccountNumber\n"
          },
          {
            "in": "query",
            "name": "from",
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2025-12-27"
            },
            "required": false,
            "description": "Filter CRM requests created on or after this date (YYYY-MM-DD)"
          },
          {
            "in": "query",
            "name": "to",
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2025-12-31"
            },
            "required": false,
            "description": "Filter CRM requests created on or before this date (YYYY-MM-DD)"
          },
          {
            "$ref": "#/components/parameters/paginationLimit"
          },
          {
            "$ref": "#/components/parameters/paginationOffset"
          }
        ],
        "responses": {
          "200": {
            "description": "Transactions retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "totalCount": {
                      "type": "integer",
                      "example": 50
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "example": 101
                          },
                          "customerId": {
                            "type": "string",
                            "example": "CUST_001"
                          },
                          "mobile": {
                            "type": "string",
                            "example": "9876543210"
                          },
                          "orderId": {
                            "type": "string",
                            "example": "ORD_12345"
                          },
                          "amount": {
                            "type": "string",
                            "example": "1500.75"
                          },
                          "responseCode": {
                            "type": "string",
                            "example": "00"
                          },
                          "responseMsg": {
                            "type": "string",
                            "example": "Transaction Successful"
                          },
                          "responseStatus": {
                            "type": "string",
                            "example": "SUCCESS"
                          },
                          "mode": {
                            "type": "string",
                            "example": "NETBANKING"
                          },
                          "txnId": {
                            "type": "string",
                            "example": "TXN_987654"
                          },
                          "loanAccountNumber": {
                            "type": "string",
                            "example": "LN_456789"
                          },
                          "createdAt": {
                            "type": "string",
                            "format": "date-time",
                            "example": "2024-01-10T14:30:00+05:30"
                          },
                          "updatedAt": {
                            "type": "string",
                            "format": "date-time",
                            "example": "2024-01-11T10:15:00+05:30"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/internalServerError"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HealthInfo": {
        "type": "object",
        "required": [
          "message",
          "serverTime"
        ],
        "properties": {
          "message": {
            "type": "string",
            "example": "Server is running"
          },
          "serverTime": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "AdminLoginRequest": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "admin@example.com"
          },
          "password": {
            "type": "string",
            "example": "encryptedPasswordString"
          }
        }
      },
      "AdminLoginResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "description": "JWT access token"
          },
          "refreshToken": {
            "type": "string",
            "description": "JWT refresh token"
          },
          "user": {
            "type": "object",
            "description": "Admin user details"
          }
        }
      },
      "CRMData": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "12345"
          },
          "firstName": {
            "type": "string",
            "example": "Manas"
          },
          "lastName": {
            "type": "string",
            "example": "Raj"
          },
          "clientId": {
            "type": "string",
            "example": "CLIENT_001"
          },
          "contactEmailId": {
            "type": "string",
            "format": "email",
            "example": "manas@example.com"
          },
          "contactMobileNo": {
            "type": "string",
            "example": "9876543210"
          },
          "probCategory": {
            "type": "string",
            "example": "PAYMENT"
          },
          "probType": {
            "type": "string",
            "example": "FAILED_TRANSACTION"
          },
          "probSummary": {
            "type": "string",
            "example": "Payment debited but order not confirmed"
          },
          "source": {
            "type": "string",
            "example": "CRM"
          },
          "ticketId": {
            "type": "string",
            "example": "TCKT-10021"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "24-Dec-2025 10:15:30"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "24-Dec-2025 11:20:45"
          }
        }
      },
      "AdminLoginInfo": {
        "AdminLoginRequest": {
          "type": "object",
          "required": [
            "email",
            "password"
          ],
          "properties": {
            "email": {
              "type": "string",
              "format": "email",
              "example": "admin@example.com"
            },
            "password": {
              "type": "string",
              "example": "encryptedPasswordString"
            }
          }
        },
        "AdminLoginResponse": {
          "type": "object",
          "properties": {
            "token": {
              "type": "string",
              "description": "JWT access token"
            },
            "refreshToken": {
              "type": "string",
              "description": "JWT refresh token"
            },
            "user": {
              "type": "object",
              "description": "Admin user details"
            }
          }
        }
      },
      "Health": {
        "$ref": "#/components/schemas/HealthInfo"
      }
    },
    "securitySchemes": {
      "BearerAuthorizationTokenAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization",
        "description": "Supply the \"accessToken\" in the Authorization header as follows: \"Bearer <id_token>\"."
      }
    },
    "responses": {
      "internalServerError": {
        "description": "An internal error happened. check the server logs.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "type",
                "httpStatus",
                "description"
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "example": "internalServerError"
                },
                "httpStatus": {
                  "type": "integer",
                  "example": 500
                },
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "badRequest": {
        "description": "Bad Request or You need to supply the correct parameters as specified in the API docs, please check `additionalInfo` for more details",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "type",
                "httpStatus",
                "description"
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "example": "invalidParameters"
                },
                "httpStatus": {
                  "type": "integer",
                  "example": 400
                },
                "message": {
                  "type": "string"
                },
                "additionalInfo": {
                  "type": "object"
                }
              }
            }
          }
        }
      },
      "notFound": {
        "description": "The server can not find the requested resource.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "type",
                "httpStatus",
                "description"
              ],
              "properties": {
                "type": {
                  "type": "string"
                },
                "httpStatus": {
                  "type": "integer",
                  "example": 404
                },
                "message": {
                  "type": "string"
                },
                "additionalInfo": {
                  "type": "object"
                }
              }
            }
          }
        }
      },
      "unauthorized": {
        "description": "Indicates that the request requires user authentication information. The client MAY repeat the request with a suitable Authorization header field",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "type",
                "httpStatus",
                "description"
              ],
              "properties": {
                "type": {
                  "type": "string"
                },
                "httpStatus": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string"
                },
                "additionalInfo": {
                  "type": "object"
                }
              }
            }
          }
        }
      },
      "forbidden": {
        "description": "Unauthorized request. The client does not have access rights to the content.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "type",
                "httpStatus",
                "description"
              ],
              "properties": {
                "type": {
                  "type": "string"
                },
                "httpStatus": {
                  "type": "integer",
                  "example": 403
                },
                "message": {
                  "type": "string"
                },
                "additionalInfo": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "parameters": {
      "paginationLimit": {
        "in": "query",
